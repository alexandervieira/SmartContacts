<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="AVS.Contacts.Mobile.MainPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Smart Contacts">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30,0" VerticalOptions="Center">
            
            <Image Source="dotnet_bot.png" HeightRequest="185" Aspect="AspectFit" />

            <Label x:Name="WelcomeLabel" 
                   Text="Bem-vindo ao Smart Contacts!" 
                   FontSize="32" 
                   HorizontalOptions="Center" />

            <Label Text="Fale seu nome, endereÃ§o e telefone para criar um contato automaticamente" 
                   FontSize="18" 
                   HorizontalOptions="Center" />

            <Button x:Name="ListenButton" 
                    Text="{Binding IsListening, Converter={StaticResource BoolToTextConverter}}"
                    BackgroundColor="{Binding IsListening, Converter={StaticResource BoolToColorConverter}}"
                    Command="{Binding StartListeningCommand}"
                    FontSize="18"
                    Margin="0,20" />

            <Frame BackgroundColor="LightGray" Padding="10" IsVisible="{Binding VoiceText, Converter={StaticResource StringToBoolConverter}}">
                <Label Text="{Binding VoiceText}" FontSize="16" />
            </Frame>

            <Button Text="Criar Contato" 
                    Command="{Binding CreateContactCommand}"
                    BackgroundColor="Green"
                    TextColor="White"
                    FontSize="18"
                    IsVisible="{Binding VoiceText, Converter={StaticResource StringToBoolConverter}}" />

            <Button Text="Ver Contatos" 
                    Clicked="OnContactsClicked"
                    BackgroundColor="Blue"
                    TextColor="White"
                    FontSize="18"
                    Margin="0,20" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>